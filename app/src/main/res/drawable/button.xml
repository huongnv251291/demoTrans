<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/>
            <padding android:bottom="10dp" android:top="10dp" android:left="10dp" android:right="10dp"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/colorPrimary" android:width="3dp"/>
            <padding android:bottom="5dp" android:top="5dp" android:left="5dp" android:right="5dp"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
</selector>